<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.artsafin.seriesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:name="com.artsafin.seriesapp.data.SeriesProvider"
            android:authorities="com.artsafin.seriesapp.data.api.provider.serialapi"
            android:exported="false" />

        <activity
            android:name="com.artsafin.seriesapp.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.artsafin.seriesapp.activity.SeasonsActivity"
            android:parentActivityName="com.artsafin.seriesapp.activity.MainActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.artsafin.seriesapp.activity.MainActivity" />
        </activity>

        <activity
            android:name="com.artsafin.seriesapp.activity.EpisodesActivity"
            android:parentActivityName="com.artsafin.seriesapp.activity.SeasonsActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.artsafin.seriesapp.activity.SeasonsActivity" />
        </activity>
    </application>

</manifest>